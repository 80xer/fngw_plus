{
    "manifest_version": 2,
    "name": "fnguide groupware plus",
    "description": "Plug-in with useful features for fnguide groupware.",
    "version": "2.0.1",
    "short_name": "fngw_plus",
    "permissions": [
        "webRequest", "webRequestBlocking",
        "tabs",
        "https://gw.fnguide.com/*"
    ],

    "content_scripts": [
        {
            "run_at" :"document_end",
            "matches": ["https://gw.fnguide.com/login"],
            "js": ["lib/jquery-2.2.1.min.js", "login/hello.js"],
            "css": ["login/hello.css"]
        },
        {
            "run_at" :"document_end",
            "matches": ["http://gw.fnguide.com/*"],
            "js": ["lib/jquery-2.2.1.min.js", "ehr/cal.js", "ehr/ehr.js", "lib/jquery.timepicker.min.js", "home/timeout.js", "lib/jquery.dataTables.min.js"],
            "css": ["lib/jquery.timepicker.css", "home/timeout.css", "ehr/ehr.css"]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": ["home/inputFake.html", "ehr/cal.html"],

    "icons": { "16": "icon16.png" }
}
