{
    "manifest_version": 2,
    "name": "fnguide groupware plus",
    "description": "Plug-in with useful features for fnguide groupware.",
    "version": "3.4.1",
    "short_name": "fngw_plus",
    "permissions": [
        "https://docs.google.com/*",
        "webRequest", "webRequestBlocking",
        "tabs",
        "https://gw.fnguide.com/*",
        "storage"
    ],

    "content_scripts": [
        {
            "run_at" :"document_end",
            "matches": ["https://gw.fnguide.com/login", "https://gw.fnguide.com/login?lang=ko"],
            "js": ["lib/jquery-2.2.1.min.js", "login/login.js"],
            "css": ["login/login.css"]
        },
        {
            "run_at" :"document_end",
            "matches": ["http://gw.fnguide.com/*"],
            "js": ["lib/jquery-2.2.1.min.js", "ehr/cal.js", "ehr/ehr.js", "lib/jquery.timepicker.min.js", "home/timeout.js", "devteam/devteam.js", "main/main.js"],
            "css": ["lib/jquery.timepicker.css", "home/timeout.css", "ehr/ehr.css", "devteam/devteam.css", "main/main.css"]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": ["home/inputFake.html", "ehr/cal.html", "img/fngwplus.png"],

    "icons": { "16": "icon16.png" }
}
