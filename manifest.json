{
    "manifest_version": 2,
    "name": "fnguide groupware plus",
    "description": "Plug-in with useful features for fnguide groupware.",
    "version": "1.0",

    // "browser_action": {
    //     "default_icon": "icon.png",
    //     "default_popup": "popup.html"
    // },

    "permissions": [
        "tabs",
        "https://gw.fnguide.com/*"
    ],

    "content_scripts": [
        {
            "run_at" :"document_end",
            "matches": ["https://gw.fnguide.com/login"],
            "js": ["lib/jquery-2.2.1.min.js", "login/hello.js"],
            "css": ["login/hello.css"]
        },
        {
            "run_at" :"document_end",
            "matches": ["http://gw.fnguide.com/app/ehr"],
            "js": ["lib/jquery-2.2.1.min.js", "ehr/cal.js", "ehr/ehr.js"],
            "css": ["ehr/ehr.css"]
        }

    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "web_accessible_resources": ["ehr/ehr.css", "ehr/cal.html"]
}